<?xml version="1.0" encoding="utf-8"?>
<com.ugoutech.searchshowview.ExLinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/search_show_view_hs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/search_show_view_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/search_show_view_edit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/search_show_view_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_sousuo1"/>

        <EditText
            android:id="@+id/search_show_view_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:scrollbars="horizontal"/>
    </LinearLayout>

</com.ugoutech.searchshowview.ExLinearlayout>